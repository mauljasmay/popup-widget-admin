# Mini Services Environment Variables
# Copy this file to mini-services/.env and update the values

# WebSocket Service
WEBSOCKET_PORT=3003
WEBSOCKET_HOST=localhost

# API Services
API_SERVICE_PORT=3004
API_SERVICE_HOST=localhost

# Database (shared with main app)
SHARED_DB_PATH=../db/custom.db

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=90000

# Development
NODE_ENV=development