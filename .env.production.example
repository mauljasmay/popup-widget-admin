# Production Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DB_HOST=your_production_database_host
DB_PORT=3306
DB_NAME=popup_widget_production
DB_USER=your_production_db_user
DB_PASSWORD=your_secure_database_password_here

# Application Settings
APP_NAME=Popup Widget Admin
APP_URL=https://yourdomain.com
APP_ENV=production

# Security (IMPORTANT: Generate secure random strings)
JWT_SECRET=generate_256_bit_random_string_here
ENCRYPTION_KEY=generate_256_bit_encryption_key_here

# Session Configuration
SESSION_LIFETIME=7200
SESSION_PATH=/
SESSION_DOMAIN=yourdomain.com
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict

# Email Settings
SMTP_HOST=your_email_provider_host
SMTP_PORT=587
SMTP_USERNAME=your_production_email@yourdomain.com
SMTP_PASSWORD=your_secure_email_password_here
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Popup Widget Admin

# File Upload Settings
MAX_FILE_SIZE=2097152
UPLOAD_PATH=/var/www/popup-widget/uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# API Settings
API_RATE_LIMIT=60
API_TIMEOUT=15

# Analytics Settings
ANALYTICS_RETENTION_DAYS=90
ENABLE_ANALYTICS=true

# Cache Settings
CACHE_DRIVER=redis
CACHE_PREFIX=popup_widget_prod_
CACHE_TTL=1800

# Logging
LOG_LEVEL=warning
LOG_PATH=/var/log/popup-widget/
LOG_MAX_FILES=7

# Production Security
DEBUG=false
SHOW_ERRORS=false
FORCE_HTTPS=true
CORS_ORIGIN=https://yourdomain.com

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/popup-widget/

# Performance
ENABLE_COMPRESSION=true
ENABLE_CDN=false
CDN_URL=

# Monitoring
HEALTH_CHECK_ENABLED=true
MONITORING_ENABLED=true
SENTRY_DSN=your_sentry_dsn_here